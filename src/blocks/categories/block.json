{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "a3-portfolio/categories",
	"title": "a3 Portfolio Categories",
	"category": "a3rev-blocks",
	"description": "Show the grid of Portfolio Items are assign to Portfolio Categories are selected",
	"keywords": [ "a3 Portfolio", "a3 Portfolio Categories", "Portfolio Categories Items", "a3rev" ],
	"version": "2.0",
	"textdomain": "a3-portfolio",
	"attributes":{
		"blockID": {
			"type": "string"
		},
		"catIDs": {
			"type": "array"
		},
		"enableCustomColumns": {
			"type": "boolean",
			"default": false
		},
		"customColumns": {
			"type": "number",
			"default": 4
		},
		"numberItems": {
			"type": "string"
		},
		"showNavBar": {
			"type": "boolean",
			"default": false
		},
		"enableCardSticker": {
			"type": "boolean",
			"default": false
		},
		"cardStickerPosition": {
			"type": "string",
			"default": "under-image"
		},
		"enableDropDownSticker": {
			"type": "boolean",
			"default": false
		},
		"dropDownStickerPosition": {
			"type": "string",
			"default": "top-right"
		},
		"styleCardSticker": {
			"type": "object",
			"default": {}
		},
		"styleExSticker": {
			"type": "object",
			"default": {}
		},
		"isPreview": {
			"type": "boolean",
			"default": false
		}
	},
	"selectors": {
        "root": ".wp-block-a3-portfolio-categories"
    },
	"supports": {
		"html": false
	},
	"editorScript": "a3-portfolio-block-js",
	"editorStyle": "a3-portfolio-block-editor-css"
}
